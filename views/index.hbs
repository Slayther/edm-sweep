<link rel="stylesheet" href="/stylesheets/hover.css">
<link rel="stylesheet" href="/stylesheets/banner.css">
<!--<link rel="stylesheet" href="/stylesheets/style.css">-->



<div class="jumbotron banner center bottom-shadow">
    <div class="row">
        <div class="col-lg-6">
            <h1 class="text-shadow">Ending Soon</h1>
            <h2 class="text-shadow">{{contest.0.contestName}}</h2>
            <h3 class="text-shadow">
                <div id="clockdiv">
                    <span class="days"></span> days
                    <span class="hours"></span> hours
                    <span class="minutes"></span> minutes
                    <span class="seconds"></span> seconds
                </div>
            </h3>
            <a href="{{contest.0.contestLink}}" class="btn btn-default" target="_blank">
                ENTER NOW!
            </a>
        </div>
        <div class="col-lg-6">
            <img src="/images/edm-raves-logo.png" class="img-responsive padding">
        </div>
    </div>
</div>
<div class="center">
    <h3 class="text-shadow">Enter Now!</h3>
    <h4 class="text-shadow">Clicking on a contest will redirect you to the entry page</h4>
</div>

<div class="center">
    {{#each contest}}
        <!--<div class="col-lg-4 col-md-3 col-sm-12 center">-->
        <a href="{{this.contestLink}}" target="_blank">
            <div class="padding">
                <img class="img-responsive" src="/images/uploads/contests/{{this.contestImage}}" alt="" >
            </div>
        </a>
        <!--</div>-->
    {{/each}}
</div>

<br>
<div class="divider center"></div>
<br>

<div class="wrapper">
    <div class="container">
        <div class="col-lg-12 center">
            <h3>Have Questions?</h3>
            <h1>Contact Us</h1>
            <form action="/contact">
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <select class="form-control" id="subject" name="subject">
                        <option>Contest Submission</option>
                        <option>Website Advertising</option>
                        <option>Social Media Advertising</option>
                        <option>General Contact</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="text" class="form-control" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <input type="text" class="form-control" name="message" placeholder="message">
                </div>

                <input type="submit" value="Submit" class="btn btn-primary" style="margin-left: 0px;">

            </form>
        </div>

    </div>
</div>






<script>
    //inject nearest contest deadline
    let deadline = {{contest.0.contestEnd}};
</script>
