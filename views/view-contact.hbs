<div id="wrapper">


    <!--Page Begin-->
    <div id="page-wrapper">

        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Contact Requests
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-dashboard"></i> View Contacts
                        </li>
                    </ol>
                </div>
            </div>

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Contacts</h3>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-striped">

                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Subject</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {{#each contact}}

                                            {{#is this.subject "Website Advertising"}}
                                                <tr class="success">
                                            {{else}}
                                                <tr>
                                            {{/is}}

                                                    <td><a href="/admin/view-contact/{{this.id}}">{{this.id}}</a></td>
                                                    <td><a href="/admin/view-contact/{{this.id}}">{{this.subject}}</a></td>
                                                    <td><a href="/admin/view-contact/{{this.id}}">{{this.name}}</a></td>
                                                    <td><a href="/admin/view-contact/{{this.id}}">{{this.email}}</a></td>
                                                </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>