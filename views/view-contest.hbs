<div id="wrapper">


    <!--Page Begin-->
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Contests
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-dashboard"></i> Edit Contests
                        </li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <a href="/admin/new-post"><button type="button" class="btn btn-success">New Contest</button></a>
                </div>
            </div>
            <br>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Contests</h3>
                        </div>
                        <div class="panel-body">
                            <div class="list-group">
                                {{#each contest}}
                                    <a href="/admin/edit-post/{{this.id}}" class="list-group-item">
                                        <span class="badge">{{this.contestEnd}}</span>
                                        <li class="fa fa-fw fa-id-badge"></li>{{this.contestName}}
                                    </a>
                                {{/each}}


                            </div>
                            <div class="text-right">
                                <a href="#">View All Activity <i class="fa fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>




